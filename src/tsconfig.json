{
    "compilerOptions": {
        "noEmit": true,
        "allowJs": true,
        "module": "esnext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "strict": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "es6",
        "lib": [
            "ESNext",
            "dom"
        ],
        "experimentalDecorators": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "src/**/*",
        "lib/**/*"
    ]
}